@model BookResponseVm


@{
    ViewData["Title"] = "GetAllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shop-section section-padding fix pt-0">
    <div class="container">
        <div class="section-title-area">
            <div class="section-title" style="margin-top: 20px">
                <h2>Featured Books</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-4 mb-4">
                    <div class="shop-box-items style-2">
                        <div class="book-thumb center">
                            <a href="shop-details"><img src="~/img/book/@item.ImageUrl" alt="img" class="img-fluid"></a>
                            <ul class="post-box">
                                <li>Hot</li>
                                <li>-30%</li>
                            </ul>
                            <ul class="shop-icon d-grid justify-content-center align-items-center">
                                <li><a href="shop-cart.html"><i class="far fa-heart"></i></a></li>
                                <li><a href="shop-cart.html"><img class="icon" src="~/img/icon/shuffle.svg" alt="svg-icon"></a></li>
                                <li><a href="shop-details.html"><i class="far fa-eye"></i></a></li>
                            </ul>
                        </div>
                        <div class="shop-content">
                            <h5>Design Low Book</h5>
                            <h3><a href="shop-details.html">@item.Title<br />@item.Description</a></h3>
                            <ul class="price-list">
                                <li>$@item.Price</li>
                                <li><del>$250</del></li>
                            </ul>
                            <ul class="author-post">
                                <li class="authot-list">
                                    <span class="thumb"><img src="~/img/testimonial/client-1.png" alt="img"></span>
                                    <span class="content">@item.Author</span>
                                </li>
                                <li class="star">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-regular fa-star"></i>
                                </li>
                            </ul>
                        </div>
                        <div class="shop-button">
                          

                             <a asp-controller="Carts" asp-action="AddItemToCart" asp-route-BookId="@item.Id" class="theme-btn">
                                <i class="fa-solid fa-basket-shopping"></i> Add To Cart
                            </a> 
                            
                            
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
       
    </div>
    <div class="pagination-wrapper d-flex justify-content-center mt-4"  >
        <cs-pager cs-paging-pagesize="@Model.pageSize"
                  cs-paging-pagenumber="@Model.pageNumber"
                  cs-paging-totalitems="@Model.totalItems"
                  asp-action="GetAllBooks"
                  asp-controller="Books"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link"
                  >
        </cs-pager>
    </div>

</section>


